<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="cardno great gr" >
            <div class="card-body">

                <img class="beer" src="../.././images/1.png">
                <div class="h4" >Validate the programming skills of potential employees</div>

                <div class="h5">
                    <ul>
                        <li>Extensive project library</li>
                        <li>Customize work enviroments</li>
                        <li>Easy tracking of Candidates</li>
                        <li>Comprehensive reports</li>

                    </ul>
                </div>

            </div>
            </div>


        </div>
        <div class="col-lg-4">
             <form action="/login" method="post">
            <div class="form-group great1">
                <h4>Login</h4>
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{#each message}}
                            <p>{{this}}</p>

                        {{/each}}
                    </div>

                    {{/if}}

                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Login</button>
        </form>

        <hr>

        <p>Need an account? <a href="/signup">Signup</a></p>

        </div>
    </div>


</div>